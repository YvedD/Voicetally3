<?xml version="1.0" encoding="utf-8"?>
<!-- Full-screen dialoog: kaart 40%, resultaten 45%, knoppen 15% -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resultsDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="12dp">

    <!-- Titel -->
    <TextView
        android:id="@+id/txtHeader"
        style="@style/VT.Text.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Resultaten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Kaart: 40% hoogte -->
    <FrameLayout
        android:id="@+id/mapHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHeader">

        <org.osmdroid.views.MapView
            android:id="@+id/mapViewResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Resultaten: 45% hoogte (eigen scroll) -->
    <ScrollView
        android:id="@+id/resultsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapHolder">

        <TextView
            android:id="@+id/txtResults"
            style="@style/VT.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp" />
    </ScrollView>

    <!-- Knoppen: 15% hoogte -->
    <LinearLayout
        android:id="@+id/buttonsRow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultsScroll">

        <Button
            android:id="@+id/btnOpslaanDelenReset"
            style="@style/Widget.VoiceTally.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Opslaan + Delen + Reset"
            android:textAppearance="@style/VT.Text.Button" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnNieuweSessie"
            style="@style/Widget.VoiceTally.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nieuwe sessie"
            android:textAppearance="@style/VT.Text.Button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
