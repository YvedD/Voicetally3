<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ðŸŒ™ App Theme -->
    <style name="Theme.VoiceTally3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightgrey</item>
        <item name="colorPrimaryVariant">@color/lightgrey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lightgrey</item>

        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- âœ… Universele knop -->
    <style name="Widget.VoiceTally.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/black</item>
        <item name="strokeColor">@color/teal_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- âœ… Card-style -->
    <style name="BorderCardStyle">
        <item name="android:background">@drawable/border_card</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="PopupMenuDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- âœ… velden om de aliassen te bewerken-style -->
    <style name="AliasFieldStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    <!-- âœ… titelbalk-style -->
    <style name="Toolbar.Title.Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
